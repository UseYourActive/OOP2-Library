<configuration>

    <!-- Status listener and logger exclusion -->
    <statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener" />
    <excludeLogger name="org.slf4j.impl.StaticLoggerBinder" />

    <!-- Console Appender with custom highlighting -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="ch.qos.logback.classic.PatternLayout">
                <pattern>%customHighlightingLogLevel(%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5level]) %customHighlightingPackageName(%logger{36}) - %customHighlightingMessage(%msg%n)</pattern>
            </layout>
        </encoder>
    </appender>

    <!-- File Appender -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/application-file.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5level] [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Rolling File Appender -->
    <appender name="ROLLING_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/application-rolling.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/application-rolling.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5level] [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Loggers -->
    <root level="info">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="ROLLING_FILE"/>
    </root>

    <!-- Custom Highlighting Rules -->
    <conversionRule conversionWord="customHighlightingLogLevel" converterClass="com.library.frontend.utils.colors.CustomHighlightingLogLevel" />
    <conversionRule conversionWord="customHighlightingPackageName" converterClass="com.library.frontend.utils.colors.CustomHighlightingPackageName" />
    <conversionRule conversionWord="customHighlightingMessage" converterClass="com.library.frontend.utils.colors.CustomHighlightingMessage" />
    <conversionRule conversionWord="customHighlightingThread" converterClass="com.library.frontend.utils.colors.CustomHighlightingThread" />
    <conversionRule conversionWord="customHighlightingLoggerName" converterClass="com.library.frontend.utils.colors.CustomHighlightingLoggerName" />
    <conversionRule conversionWord="customHighlightingTimestamp" converterClass="com.library.frontend.utils.colors.CustomHighlightingTimestamp" />

</configuration>
